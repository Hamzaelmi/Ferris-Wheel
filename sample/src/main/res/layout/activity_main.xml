<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_gray"
    tools:context="ru.igla.carousel.sample.SampleKotlinActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ru.github.igla.carousel.FerrisWheelView
            android:id="@+id/ferrisWheelView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:fwv_cabinSize="42dp"
            app:fwv_cabinsNumber="8"
            app:fwv_isClockwise="true"
            app:fwv_rotateSpeed="6"
            app:fwv_startAngle="10" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:text="Open SampleJava Activity"
            android:textSize="16sp"
            android:visibility="gone" />

    </FrameLayout>

    <include layout="@layout/bottomsheet_settings_attributes" />

</android.support.design.widget.CoordinatorLayout>
